	body {
		@apply bg-primary;
		color: var(--text-primary);
		font-feature-settings: "rlig" 1, "calt" 1;
	}
	label {
		@apply mb-1 block text-sm font-medium text-gray-700;
	}

	input[type="text"]:not(.search):not(.line-item),
	input[type="number"]:not(.line-item),
	input[type="date"],
	input[type="password"],
	input[type="email"] {
		@apply h-8 w-full max-w-sm rounded-sm border p-2 text-base lg:h-12;
	}

	textarea {
		@apply h-32 w-full rounded-sm border p-4 text-base;
	}
	.form-error-message {
		@apply text-xs italic text-red-500;
	}
	.input-error {
		@apply border-red-200;
	}

